<%- model_class = Evaluation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @evaluation.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:toilet_id) %>:</strong></dt>
  <dd><%= @evaluation.toilet_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clean) %>:</strong></dt>
  <dd><%= @evaluation.clean %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comfort) %>:</strong></dt>
  <dd><%= @evaluation.comfort %></dd>
  <dt><strong><%= model_class.human_attribute_name(:good_smell) %>:</strong></dt>
  <dd><%= @evaluation.good_smell %></dd>
  <dt><strong><%= model_class.human_attribute_name(:design) %>:</strong></dt>
  <dd><%= @evaluation.design %></dd>
  <dt><strong><%= model_class.human_attribute_name(:find) %>:</strong></dt>
  <dd><%= @evaluation.find %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @evaluation.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @evaluation.comment %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              evaluations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_evaluation_path(@evaluation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              evaluation_path(@evaluation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
