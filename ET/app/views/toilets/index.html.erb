<%- model_class = Toilet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:名前) %></th>
      <th><%= model_class.human_attribute_name(:住所) %></th>
      <th><%= model_class.human_attribute_name(:洋式) %></th>
      <th><%= model_class.human_attribute_name(:和式) %></th>
      <th><%= model_class.human_attribute_name(:多目的トイレ) %></th>
      <th><%= model_class.human_attribute_name(:小便器の数) %></th>
      <th><%= model_class.human_attribute_name(:コメント) %></th>
      <th><%= model_class.human_attribute_name(:評価) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @toilets.each do |toilet| %>
      <tr>
        <td><%= link_to toilet.name, toilet_path(toilet) %></td>
        <td><%= toilet.address %></td>
        <td><%= toilet.western %></td>
        <td><%= toilet.japanese %></td>
        <td>
          <% if toilet.multi %>
            有 
          <% else %>
            無
          <% end %>
        </td>
        <td><%= toilet.urinals %></td>
        <td><%= toilet.comment %></td>
        <td><%= toilet.ave_rate %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_toilet_path(toilet), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      toilet_path(toilet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_toilet_path,
            :class => 'btn btn-primary' %>
