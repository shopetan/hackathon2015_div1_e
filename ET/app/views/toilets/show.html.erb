<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:clean) %></th>
      <th><%= model_class.human_attribute_name(:comfort) %></th>
      <th><%= model_class.human_attribute_name(:good_smell) %></th>
      <th><%= model_class.human_attribute_name(:design) %></th>
      <th><%= model_class.human_attribute_name(:find) %></th>
      <th><%= model_class.human_attribute_name(:rate) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @toilet.evaluations.each do |evaluation| %>
      <tr>
        <td><%= link_to evaluation.id, toilet_evaluation_path(@toilet, evaluation) %></td>
        <td><%= evaluation.user_id %></td>
        <td><%= evaluation.clean %></td>
        <td><%= evaluation.comfort %></td>
        <td><%= evaluation.good_smell %></td>
        <td><%= evaluation.design %></td>
        <td><%= evaluation.find %></td>
        <td><%= evaluation.rate %></td>
        <td><%= evaluation.comment %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_toilet_evaluation_path(@toilet, evaluation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      toilet_evaluation_path(@toilet, evaluation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

