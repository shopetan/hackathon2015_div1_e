<%- model_class = Toilet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @toilet.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lat) %>:</strong></dt>
  <dd><%= @toilet.lat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:long) %>:</strong></dt>
  <dd><%= @toilet.long %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @toilet.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @toilet.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:western) %>:</strong></dt>
  <dd><%= @toilet.western %></dd>
  <dt><strong><%= model_class.human_attribute_name(:japanese) %>:</strong></dt>
  <dd><%= @toilet.japanese %></dd>
  <dt><strong><%= model_class.human_attribute_name(:multi) %>:</strong></dt>
  <dd><%= @toilet.multi %></dd>
  <dt><strong><%= model_class.human_attribute_name(:urinals) %>:</strong></dt>
  <dd><%= @toilet.urinals %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @toilet.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ave_rate) %>:</strong></dt>
  <dd><%= @toilet.ave_rate %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              toilets_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_toilet_path(@toilet), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              toilet_path(@toilet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
